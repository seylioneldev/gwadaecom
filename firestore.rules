rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email in ["admin@gwadecom.com"] ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // ====================================
    // CATEGORIES - Lecture publique, écriture admin
    // ====================================
    // Les visiteurs peuvent voir les catégories
    // Seuls les admins authentifiés peuvent les modifier (UI admin + console Firebase)
    match /categories/{doc} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // ====================================
    // PRODUCTS - Lecture publique, écriture admin
    // ====================================
    // Les visiteurs peuvent voir les produits
    // Seuls les admins authentifiés peuvent les modifier (UI admin)
    match /products/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ====================================
    // SETTINGS - Lecture publique, Écriture authentifiée
    // ====================================
    // Tout le monde peut lire les paramètres du site
    // Seuls les utilisateurs authentifiés peuvent les modifier
    match /settings/{doc} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // ====================================
    // ORDERS - Création publique, Lecture publique
    // ====================================
    // Permet aux visiteurs de créer des commandes (checkout sans compte)
    // Lecture publique pour permettre l'affichage de la page de confirmation
    // Note: Les IDs de commande sont générés aléatoirement, donc sécurisés
    match /orders/{orderId} {
      allow create: if true;
      allow read: if true;  // Permet la lecture pour la page de confirmation
      allow update, delete: if false;
    }

    // ====================================
    // USERS - Accès restreint à son propre profil
    // ====================================
    // Un utilisateur peut uniquement lire et modifier ses propres données
    // Permet la création lors de l'inscription (create) si l'UID correspond
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Permet la création si authentifié ET que l'UID du document correspond à l'UID de l'utilisateur
      // ET que le rôle est 'client' (empêche auto-promotion en admin)
      allow create: if request.auth != null 
                    && request.auth.uid == userId 
                    && request.resource.data.role == 'client';
    }

    // ====================================
    // RÈGLE PAR DÉFAUT - Tout bloquer
    // ====================================
    // Bloque l'accès à toutes les autres collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
